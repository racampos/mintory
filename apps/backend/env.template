# Backend Configuration Template
# Copy this to .env and update with your values

# Server Settings
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Database
CHECKPOINTER_URL=sqlite:///state.db

# MCP Server Integration
MCP_URL=http://localhost:3001
MCP_TIMEOUT=30.0

# OpenAI LLM Integration
# Required for Lore Agent historical research and LLM-based agents
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=60.0

# Image Generation
# Provider options: openai, stability, midjourney, mock
IMAGE_GEN_PROVIDER=mock
IMAGE_GEN_TIMEOUT=120.0
IMAGE_MAX_FILE_SIZE=10485760

# OpenAI DALL-E (if using openai provider)
# Uses same OPENAI_API_KEY as above

# Stability AI (if using stability provider)
# STABILITY_API_KEY=your_stability_api_key_here

# Midjourney (if using midjourney provider - not yet implemented)
# MIDJOURNEY_API_KEY=your_midjourney_api_key_here

# Optional: IPFS Pinning Service (if using real pinning in production) 
# IPFS_PIN_URL=https://api.pinata.cloud/pinning
# IPFS_PIN_KEY=your_pinata_key_here

# Development
DEBUG=true
LOG_LEVEL=info
