{
  "name": "@shapecraft2/contracts",
  "version": "1.0.0",
  "description": "Smart contracts for ShapeCraft2 using Hardhat and OpenZeppelin",
  "main": "dist/index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy-mainnet": "npx hardhat run scripts/deploy.ts --network shapemainnet",
    "deploy-testnet": "npx hardhat run scripts/deploy.ts --network shapetestnet",
    "verify": "hardhat run scripts/verify-shape.ts",
    "verify-mainnet": "npx hardhat run scripts/verify-shape.ts --network shapemainnet",
    "verify-testnet": "npx hardhat run scripts/verify-testnet.ts",
    "export-abi": "hardhat run scripts/export-abi.ts",
    "clean": "hardhat clean",
    "build": "npm run compile && npm run export-abi"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.0.0",
    "chai": "^4.3.7",
    "hardhat": "^2.19.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
