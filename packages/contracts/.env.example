# ========================================
# ShapeCraft2 Contracts Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control

# ========================================
# DEPLOYMENT & WALLET CONFIGURATION
# ========================================

# Private key for contract deployment and transactions
# WARNING: Keep this secure and never commit to version control
# Format: 0x followed by 64 hex characters (no quotes)
PRIVATE_KEY=0x...

# ========================================
# SHAPE MAINNET CONFIGURATION
# ========================================

# Shape Mainnet Configuration (Primary)
SHAPE_RPC_URL=https://shape-mainnet.g.alchemy.com/v2/YOUR_API_KEY
CHAIN_ID=360

# Alternative Shape Mainnet RPC URLs (for redundancy)
SHAPE_RPC_URL_BACKUP=https://shape-mainnet.infura.io/v3/YOUR_INFURA_KEY

# Shape Testnet (for testing - keep for development)
SHAPE_TESTNET_RPC_URL=https://sepolia.shape.network
SHAPE_TESTNET_CHAIN_ID=11011

# ========================================
# BLOCK EXPLORER CONFIGURATION
# ========================================

# Shape Mainnet Verification - Use Shape's own explorer
# Get API key from: https://explorer.shape.network
SHAPE_EXPLORER_API_KEY=...

# Etherscan API Key (fallback for other networks)
ETHERSCAN_API_KEY=...

# Shape Explorer Base URL
EXPLORER_BASE=https://explorer.shape.network

# ========================================
# ADDITIONAL RPC OPTIONS (Optional)
# ========================================

# Infura or Alchemy endpoints for additional redundancy
INFURA_API_KEY=...
ALCHEMY_API_KEY=...

# Custom gas settings (optional, let Hardhat estimate if not set)
GAS_PRICE=20000000000  # 20 gwei
GAS_LIMIT=8000000      # 8M gas limit

# ========================================
# DEPLOYMENT OPTIONS (Optional)
# ========================================

# Deploy to specific networks (uncomment to use)
DEPLOY_NETWORK=shapemainnet  # Shape Mainnet
# DEPLOY_NETWORK=shapetestnet  # Shape Testnet
# DEPLOY_NETWORK=hardhat       # Local testing

# Verify contracts after deployment (true/false)
VERIFY_CONTRACTS=true

# ========================================
# SECURITY & TESTING
# ========================================

# Enable debug mode for detailed logs
DEBUG=false

# Test mnemonic for local development (optional)
TEST_MNEMONIC="test test test test test test test test test test test junk"
