{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./scripts",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./typechain-types"]
  },
  "include": ["scripts/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist", "artifacts", "cache"]
}
